{
  "manifest_version": 3,
  "name": "Gradescope Due Soon",
  "version": "0.4.0",
  "description": "Unified, chronological list of Gradescope assignments due soon. Refresh All uses course dashboard (fixes unauthorized /assignments).",
  "permissions": [
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://www.gradescope.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Gradescope Due Soon"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.gradescope.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}