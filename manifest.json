{
  "manifest_version": 3,
  "name": "Gradescope Due Soon",
  "version": "0.6.2",
  "description": "Gradescope Due Soon: term filter + submitted/graded detection + due date parsing.",
  "permissions": [
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://www.gradescope.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Gradescope Due Soon",
    "default_icon": {
      "16": "icons/download.png",
      "32": "icons/download.png",
      "48": "icons/download.png",
      "128": "icons/download.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.gradescope.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/download.png",
    "32": "icons/download.png",
    "48": "icons/download.png",
    "128": "icons/download.png"
  }
}